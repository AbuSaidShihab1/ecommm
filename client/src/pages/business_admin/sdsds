        Payment
      </div>

      {popupVisible && <PaymentPopup closePopup={handleClosePopup} />}
      </div>
    </form>


            {/* -------------------form---------------------- */}
         </section>
       {/* ------------------------new customer table-------------------- */}
       </section>
        </section>
    </section>
  )
}

export default Bneworder